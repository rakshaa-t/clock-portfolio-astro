---
import Layout from '../layouts/Layout.astro';
import '../styles/global.css';
import { NOTES } from '../data/notes.js';
---

<Layout title="Raksha Tated — Product Designer" description="Product Designer. Five years designing products, one year engineering them. Tech, healthcare and consumer apps. Select client work available.">

<!-- ═══ SOUND KNOB (desktop — standalone, original position) ═══ -->
<div class="sound-knob-wrap sound-knob-desktop" transition:persist="sound-knob">
  <div class="sound-knob" id="soundKnob">
    <div class="knob-dot"></div>
  </div>
  <span class="knob-tooltip" id="knobTooltip">Sound on</span>
</div>

<!-- ═══ MODAL ═══ -->
<div class="modal-overlay" id="modalOverlay">
  <div class="modal-backdrop" onclick="closeModal()"></div>
  <div class="modal-card" id="modalCard" role="dialog" aria-modal="true" aria-labelledby="modalTitle">
    <div class="sheet-handle"></div>
    <div class="modal-card-inner">
      <button class="modal-close" onclick="closeModal()" aria-label="Close modal">✕</button>
      <div class="modal-carousel">
        <div class="carousel-track" id="carouselTrack"></div>
        <div class="carousel-counter" id="carouselCounter">1 / 3</div>
        <button class="carousel-btn prev" onclick="carouselPrev()" aria-label="Previous slide"><svg width="10" height="16" viewBox="0 0 10 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="8 2 2 8 8 14"/></svg></button>
        <button class="carousel-btn next" onclick="carouselNext()" aria-label="Next slide"><svg width="10" height="16" viewBox="0 0 10 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><polyline points="2 2 8 8 2 14"/></svg></button>
        <a class="modal-case-study-link" id="modalCaseStudyLink" href="#" target="_blank" rel="noopener noreferrer">View full case study <svg class="cta-arrow" width="12" height="12" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 12L12 4"/><path d="M5 4h7v7"/></svg></a>
      </div>
      <div class="modal-body">
        <h3 class="modal-title" id="modalTitle"></h3>
        <div class="modal-tags" id="modalTags"></div>
        <p class="modal-desc" id="modalDesc"></p>
      </div>
    </div>
  </div>
</div>

<!-- ═══ PAGE CONTENT ═══ -->
<main class="page-content">
  <div class="page-inner">

    <!-- ═══ ABOUT — Bio + CTAs ═══ -->
    <div class="browse-section" id="sec-about">
      <h2>Raksha Tated</h2>
      <p class="subtitle">Product Designer</p>

      <div class="about-bio">
        <p>I work with <span class="about-drop-trigger" data-drop="agencies">agencies</span>, <span class="about-drop-trigger" data-drop="companies">companies</span> and <span class="about-drop-trigger" data-drop="leaders">founders</span> — mostly on consumer iOS apps, healthcare platforms and AI software. I care a lot about the space between design and code.</p>
        <p>If you'd like to work together, <a href="https://cal.com/raksha-tated-v2ee58/15min" class="about-bio-link" data-cal-link="raksha-tated-v2ee58/15min" data-cal-config='{"layout":"month_view"}' onclick="event.preventDefault()">book a call</a> or email <a href="mailto:hey@raksha.design" class="about-bio-link" id="aboutEmailLink">hey@raksha.design</a>. I'll get back within 12 hours. For anything else, <a href="https://x.com/rakshaa_t" class="about-bio-link" target="_blank" rel="noopener noreferrer">DM me on X</a>.</p>
      </div>

      <div class="about-ctas">
        <div class="about-cta-primary-wrap">
          <a href="https://cal.com/raksha-tated-v2ee58/15min?user=raksha-tated-v2ee58" class="about-cta-primary" data-cal-link="raksha-tated-v2ee58/15min" data-cal-config='{"layout":"month_view"}' onclick="event.preventDefault()">Reach out <svg class="cta-arrow" width="14" height="14" viewBox="0 0 16 16" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 12L12 4"/><path d="M5 4h7v7"/></svg></a>
        </div>
        <div class="about-cta-strip">
          <a href="https://x.com/rakshaa_t" class="about-cta" aria-label="Twitter" target="_blank" rel="noopener noreferrer">
            <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M4 4l11.733 16h4.267l-11.733-16zM4 20l6.768-6.768M17.5 4l-6.768 6.768"/></svg>
          </a>
          <a href="https://github.com/rakshaa-t" class="about-cta" aria-label="GitHub" target="_blank" rel="noopener noreferrer">
            <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M15 22v-4a4.8 4.8 0 0 0-1-3.5c3 0 6-2 6-5.5.08-1.25-.27-2.48-1-3.5.28-1.15.28-2.35 0-3.5 0 0-1 0-3 1.5-2.64-.5-5.36-.5-8 0C6 2 5 2 5 2c-.3 1.15-.3 2.35 0 3.5A5.403 5.403 0 0 0 4 9c0 3.5 3 5.5 6 5.5-.39.49-.68 1.05-.85 1.65-.17.6-.22 1.23-.15 1.85v4"/><path d="M9 18c-4.51 2-5-2-7-2"/></svg>
          </a>
          <a href="https://www.linkedin.com/in/rakshatated/" class="about-cta" aria-label="LinkedIn" target="_blank" rel="noopener noreferrer">
            <svg width="13" height="13" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"><path d="M16 8a6 6 0 0 1 6 6v7h-4v-7a2 2 0 0 0-2-2 2 2 0 0 0-2 2v7h-4v-7a6 6 0 0 1 6-6z"/><rect width="4" height="12" x="2" y="9"/><circle cx="4" cy="4" r="2"/></svg>
          </a>
        </div>
      </div>

      <div class="about-details">
        <div class="about-detail">
          <span class="about-detail-label">Timezones</span>
          <span class="about-detail-value">
            <span class="toggle" id="locationToggle" role="switch" aria-checked="false" tabindex="0"><span class="toggle-knob"></span></span>
            <span id="locationText">IST and UTC+0</span>
          </span>
        </div>
        <div class="about-detail">
          <span class="about-detail-label">Status</span>
          <span class="about-detail-value"><span class="led"></span>In the studio</span>
        </div>
        <div class="about-detail">
          <span class="about-detail-label">Stack</span>
          <span class="stack-cards">
            <span class="stack-card">Figma</span>
            <span class="stack-card">React</span>
            <span class="stack-card">SwiftUI</span>
            <span class="stack-card">Claude Code</span>
          </span>
        </div>
      </div>
    </div>

    <!-- ═══ WORK — Puzzle grid of project cards ═══ -->
    <div class="browse-section" id="sec-work">
      <h2>Design Work</h2>
      <p class="subtitle">Tap to explore case studies</p>

      <div class="puzzle-grid">
        <div class="puzzle-card" data-project="0">
          <div class="puzzle-img"><img src="/projects/pet-tickle.jpg" alt="Pet Tickle App" loading="lazy"></div>
          <div class="puzzle-overlay"><span>Pet Tickle App</span></div>
        </div>
        <div class="puzzle-card" data-project="1">
          <div class="puzzle-img"><img src="/projects/ova-app.jpg" alt="Ova App" loading="lazy"></div>
          <div class="puzzle-overlay"><span>Ova App</span></div>
        </div>
        <div class="puzzle-card" data-project="2">
          <div class="puzzle-img"><img src="/projects/greex-defi.jpg" alt="Greex DeFi" loading="lazy"></div>
          <div class="puzzle-overlay"><span>Greex DeFi</span></div>
        </div>
        <div class="puzzle-card" data-project="3">
          <div class="puzzle-img"><img src="/projects/indianoil.jpg" alt="IndianOil Dashboard" loading="lazy"></div>
          <div class="puzzle-overlay"><span>IndianOil Dashboard</span></div>
        </div>
        <div class="puzzle-card" data-project="4">
          <div class="puzzle-img"><img src="/projects/dealdoc-overview.jpg" alt="DealDoc" loading="lazy"></div>
          <div class="puzzle-overlay"><span>DealDoc</span></div>
        </div>
        <div class="puzzle-card" data-project="5">
          <div class="puzzle-img"><img src="/projects/adiagnosis.jpg" alt="ADiagnosis" loading="lazy"></div>
          <div class="puzzle-overlay"><span>ADiagnosis</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="6">
          <div class="puzzle-img"><img src="/projects/vault-defi.jpg" alt="Vault DeFi" loading="lazy"></div>
          <div class="puzzle-overlay"><span>Vault DeFi</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="7">
          <div class="puzzle-img"><img src="/projects/cycling-app.jpg" alt="Cycling App" loading="lazy"></div>
          <div class="puzzle-overlay"><span>Cycling App</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="8">
          <div class="puzzle-img"><img src="/projects/chain-landing.jpg" alt="Chain Landing" loading="lazy"></div>
          <div class="puzzle-overlay"><span>Chain Landing</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="9">
          <div class="puzzle-img"><img src="/projects/data-collection.jpg" alt="Data Collection" loading="lazy"></div>
          <div class="puzzle-overlay"><span>Data Collection</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="10">
          <div class="puzzle-img"><img src="/projects/skeu-buttons.jpg" alt="Skeuomorphic Buttons" loading="lazy"></div>
          <div class="puzzle-overlay"><span>Skeuomorphic Buttons</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="11">
          <div class="puzzle-img"><img src="/projects/dealdoc-deal.jpg" alt="DealDoc Detail" loading="lazy"></div>
          <div class="puzzle-overlay"><span>DealDoc Detail</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="12">
          <div class="puzzle-img"><img src="/projects/vercel-dashboard.jpg" alt="Vercel Dashboard" loading="lazy"></div>
          <div class="puzzle-overlay"><span>Vercel Dashboard</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="13">
          <div class="puzzle-img"><video src="/projects/magicpath-3.mp4" loop muted playsinline preload="none"></video></div>
          <div class="puzzle-overlay"><span>MagicPath</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="14">
          <div class="puzzle-img"><video src="/projects/card-tilt.mp4" loop muted playsinline preload="none"></video></div>
          <div class="puzzle-overlay"><span>Card Tilt</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="15">
          <div class="puzzle-img"><video src="/projects/magicpath-2.mp4" loop muted playsinline preload="none"></video></div>
          <div class="puzzle-overlay"><span>MagicPath Experiments</span></div>
        </div>
        <div class="puzzle-card puzzle-extra" data-project="16">
          <div class="puzzle-img"><video src="/projects/dealdoc-video.mp4" loop muted playsinline preload="none"></video></div>
          <div class="puzzle-overlay"><span>DealDoc Demo</span></div>
        </div>
      </div>
      <button class="puzzle-show-more" id="puzzleShowMore">Show more work</button>
    </div>

    <!-- ═══ NOTES — Links to individual note pages ═══ -->
    <div class="browse-section" id="sec-notes">
      <h2>Things I'm writing about</h2>
      <p class="subtitle">Notes on design, code, and everything in between.</p>

      <div class="note-cards">
        {NOTES.map(note => (
          <a href={`/notes/${note.slug}`} class="note-card">
            <div class="note-card-date">{note.date}</div>
            <div class="note-card-title">{note.title}</div>
            <div class="note-card-preview">{note.preview}</div>
            <div class="note-card-tags">
              {(note.tags || []).map(t => <span class="note-card-tag">{t}</span>)}
            </div>
          </a>
        ))}
      </div>
    </div>

    <!-- ═══ BOOKMARKS — Mymind masonry grid (no container) ═══ -->
    <div class="browse-section" id="sec-bookmarks">
      <h2>Things I'm saving</h2>
      <p class="subtitle">My bookmarks live in <a href="https://mymind.com" target="_blank" style="color:var(--accent);text-decoration:none;border-bottom:1px solid rgba(139,126,200,0.3);">Mymind</a>. Here's what's caught my eye lately.</p>

      <div class="mymind-header">
        <input type="text" class="mymind-search" id="mmindSearchInput" placeholder="Search my mind..." autocomplete="off">
      </div>
      <div class="mymind-filters" id="mmindFilters">
        <span class="mymind-pill active" data-filter="all">All</span>
        <span class="mymind-pill" data-filter="animation">Animation</span>
        <span class="mymind-pill" data-filter="ui design">UI Design</span>
        <span class="mymind-pill" data-filter="tools">Tools</span>
        <span class="mymind-pill" data-filter="inspiration">Inspiration</span>
        <span class="mymind-pill" data-filter="notes">Notes</span>
      </div>
      <div class="mymind-grid" id="mmindGrid"></div>
      <button class="puzzle-show-more" id="mmindShowMore">Show more bookmarks</button>
      <div class="mm-popover-wrap" id="mmindPopWrap" style="position:fixed;">
        <div class="sheet-handle"></div>
        <div class="mm-popover" id="mmindPopover"></div>
      </div>
      <div class="mm-scrim" id="mmindScrim"></div>
    </div>

    <!-- ═══ BOOKS — Cover grid + popover highlights ═══ -->
    <div class="browse-section" id="sec-books">
      <h2>Books I'm loving</h2>
      <p class="subtitle">My shelf and my learnings.</p>

      <div class="book-filters" id="bookFilters">
        <span class="mymind-pill active" data-filter="all">All</span>
        <span class="mymind-pill" data-filter="excellent">Excellent</span>
        <span class="mymind-pill" data-filter="great">Great</span>
        <span class="mymind-pill" data-filter="reading">Reading</span>
      </div>
      <div class="books-shelf" id="booksGrid"></div>
      <button class="puzzle-show-more" id="booksShowMore">Show more books</button>
      <div class="book-pop-wrap" id="bookPopWrap" style="position:fixed;">
        <div class="sheet-handle"></div>
        <div class="book-pop" id="bookPopover"></div>
      </div>
      <div class="mm-scrim" id="bookScrim"></div>
    </div>

    <footer class="site-footer">
      <span>&copy; Raksha T 2026. V2.0.0</span>
      <span class="footer-sep">&middot;</span>
      <a href="/changelog" class="footer-link">Changelog</a>
    </footer>

  </div>
</main>

<!-- ═══ BOTTOM NAV (mobile) ═══ -->
<nav class="bottom-nav" id="bottomNav">
  <div class="sound-knob-wrap sound-knob-mobile">
    <div class="sound-knob sound-knob-mirror">
      <div class="knob-dot"></div>
    </div>
  </div>
  <div class="bottom-nav-pill">
    <div class="bottom-nav-highlight" id="bottomNavHighlight"></div>
    <a class="bottom-nav-item active" data-section="sec-about">About</a>
    <a class="bottom-nav-item" data-section="sec-work">Work</a>
    <a class="bottom-nav-item" data-section="sec-notes">Notes</a>
    <a class="bottom-nav-item" data-section="sec-bookmarks">Saves</a>
    <a class="bottom-nav-item" data-section="sec-books">Books</a>
  </div>
</nav>

<script>import '../scripts/audio.js';</script>
<script>import '../scripts/portfolio-core.js';</script>
<script>import '../scripts/books-section.js';</script>
<script>import '../scripts/mymind-flat.js';</script>
<script>import '../scripts/about-section.js';</script>
<script>import '../scripts/bottom-nav.js';</script>

<script is:inline data-astro-rerun>
  // Sole init path for all sections.
  // Module scripts only execute once — this re-runs on every navigation.
  function _reinit(){
    if(window.__initPortfolioCore) window.__initPortfolioCore();
    if(window.__initBooks) window.__initBooks();
    if(window.__initMymind) window.__initMymind();
    if(window.__initAbout) window.__initAbout();
    if(window.__initBottomNav) window.__initBottomNav();
    if(window.__initAudio) window.__initAudio();
  }
  if(document.readyState==='loading'){
    document.addEventListener('DOMContentLoaded',_reinit,{once:true});
  } else {
    _reinit();
  }
</script>

<script is:inline>
  (function (C, A, L) { let p = function (a, ar) { a.q.push(ar); }; let d = C.document; C.Cal = C.Cal || function () { let cal = C.Cal; let ar = arguments; if (!cal.loaded) { cal.ns = {}; cal.q = cal.q || []; d.head.appendChild(d.createElement("script")).src = A; cal.loaded = true; } if (ar[0] === L) { const api = function () { p(api, arguments); }; const namespace = ar[1]; api.q = api.q || []; if(typeof namespace === "string"){cal.ns[namespace] = cal.ns[namespace] || api;p(cal.ns[namespace], ar);p(cal, ["initNamespace", namespace]);} else p(cal, ar); return;} p(cal, ar); }; })(window, "https://app.cal.com/embed/embed.js", "init");
  Cal("init", {origin:"https://app.cal.com"});
  Cal("ui", {"cssVarsPerTheme":{"light":{"cal-brand":"#3A3632"}},"hideEventTypeDetails":false,"layout":"month_view"});
</script>

</Layout>
